# ============================================
# üîê UPDATES NEWS API - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to Git! Only commit .env.example

# Server Configuration
PORT=3000
NODE_ENV=production

# ============================================
# üîë NEWS API KEYS (Get from respective providers)
# ============================================

# NewsAPI.org - https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key_here

# NewsData.io - https://newsdata.io/register
NEWSDATA_KEY=your_newsdata_key_here

# GNews.io - https://gnews.io/register
GNEWS_KEY=your_gnews_key_here

# CurrentsAPI - https://currentsapi.services/en/register
CURRENTS_KEY=your_currents_key_here

# WorldNewsAPI - https://worldnewsapi.com/register
WORLDNEWS_KEY=your_worldnews_key_here

# ============================================
# üåê CORS ALLOWED ORIGINS (Comma-separated)
# ============================================
ALLOWED_ORIGINS=https://vkbofficial4u.github.io,https://vkb0402-pixel.github.io,https://yourdomain.com

# ============================================
# üìä OPTIONAL CONFIGURATION
# ============================================

# Logging Level (debug, info, warn, error)
LOG_LEVEL=info

# Cache Duration (milliseconds) - Default: 30 minutes
CACHE_DURATION=1800000

# Maximum Cache Size
MAX_CACHE_SIZE=3000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=3000
