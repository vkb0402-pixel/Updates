# ============================================
# üîê NEWS API KEYS
# Get your free keys from:
# - NewsAPI: https://newsapi.org/register
# - NewsData: https://newsdata.io/register
# - GNews: https://gnews.io/register
# - Currents: https://currentsapi.services/en/register
# - WorldNews: https://worldnewsapi.com/register
# ============================================
NEWSAPI_KEY=your_newsapi_key_here
NEWSDATA_KEY=your_newsdata_key_here
GNEWS_KEY=your_gnews_key_here
CURRENTS_KEY=your_currents_key_here
WORLDNEWS_KEY=your_worldnews_key_here

# ============================================
# üåê CORS CONFIGURATION
# Add your frontend URLs (comma-separated, NO SPACES)
# Examples:
# - Local: http://localhost:5500,http://127.0.0.1:5500
# - GitHub Pages: https://username.github.io
# - Render: https://yourapp.onrender.com
# ============================================
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,https://yourusername.github.io

# ============================================
# üöÄ SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# ============================================
# üõ°Ô∏è SECURITY SETTINGS (v6.0)
# ============================================
# Global rate limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=2000

# API rate limiting (requests per minute)
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=150

# Search rate limiting (requests per minute)
SEARCH_RATE_LIMIT_WINDOW_MS=60000
SEARCH_RATE_LIMIT_MAX_REQUESTS=50

# Session secret (generate random 64-char string)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=generate_random_64_char_string_here

# JWT secret (for future authentication)
JWT_SECRET=generate_random_64_char_string_here

# Encryption key for sensitive data (32-byte hex)
ENCRYPTION_KEY=generate_random_32_byte_hex_here

# ============================================
# üìä LOGGING & MONITORING
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/news-proxy.log
ENABLE_DEBUG=false
ENABLE_REQUEST_LOGGING=true

# ============================================
# üîí HTTPS/SSL (for production deployment)
# ============================================
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
TRUST_PROXY=true

# ============================================
# üì± APPLICATION METADATA
# ============================================
APP_NAME=News-API-Proxy-Secure
APP_VERSION=6.0.0
SUPPORT_EMAIL=your-email@example.com
COMPANY_NAME=YourCompany

# ============================================
# ‚ö° PERFORMANCE SETTINGS (v6.0)
# ============================================
# Cache duration in milliseconds (30 minutes = 1800000ms)
CACHE_DURATION=1800000

# Maximum unique articles to track globally
MAX_CACHE_SIZE=2000

# Max news articles per request
MAX_ARTICLES_PER_REQUEST=100

# Request timeout in milliseconds
REQUEST_TIMEOUT=15000

# Max retries for failed requests
MAX_RETRIES=3

# ============================================
# üîç SEARCH CONFIGURATION (v6.0)
# ============================================
# Minimum search query length
MIN_SEARCH_LENGTH=2

# Maximum search results to return
MAX_SEARCH_RESULTS=50

# Search cache duration (30 minutes)
SEARCH_CACHE_DURATION=1800000

# Enable relevance scoring
ENABLE_RELEVANCE_SCORING=true

# ============================================
# üåç LOCALIZATION
# ============================================
DEFAULT_LANGUAGE=en
DEFAULT_COUNTRY=in
SUPPORTED_LANGUAGES=en,hi,es,fr,de,ja,zh,ar,pt,ru,it,ko
SUPPORTED_COUNTRIES=in,us,gb,ca,au,de,fr,es,jp,cn,br,mx,it,ru,kr

# ============================================
# üóÑÔ∏è DATABASE (optional - for future features)
# ============================================
# DATABASE_URL=mongodb://localhost:27017/news-app
# REDIS_URL=redis://localhost:6379
# DB_ENABLE_SSL=true
# DB_POOL_SIZE=10

# ============================================
# üìß EMAIL (optional - for notifications)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@yourapp.com

# ============================================
# üîî WEBHOOKS (optional - for integrations)
# ============================================
# WEBHOOK_URL=https://your-webhook-url.com/api/webhook
# SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR/WEBHOOK

# ============================================
# üß™ FEATURE FLAGS (v6.0)
# ============================================
ENABLE_SEARCH=true
ENABLE_DUPLICATE_REMOVAL=true
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true
ENABLE_HASH_BASED_DEDUP=true
ENABLE_OFFLINE_MODE=true

# ============================================
# üêõ DEBUG MODE (development only - set to false in production)
# ============================================
DEBUG=false
VERBOSE_ERRORS=false
MOCK_API_RESPONSES=false

# ============================================
# üìà MONITORING & ANALYTICS (optional)
# ============================================
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
