# ============================================
# üîê NEWS API KEYS
# Get your free keys from:
# - NewsAPI: https://newsapi.org/register
# - NewsData: https://newsdata.io/register
# - GNews: https://gnews.io/register
# - Currents: https://currentsapi.services/en/register
# - WorldNews: https://worldnewsapi.com/register
# ============================================
NEWSAPI_KEY=your_newsapi_key_here
NEWSDATA_KEY=your_newsdata_key_here
GNEWS_KEY=your_gnews_key_here
CURRENTS_KEY=your_currents_key_here
WORLDNEWS_KEY=your_worldnews_key_here

# ============================================
# üåê CORS CONFIGURATION
# Add your frontend URLs (comma-separated, no spaces)
# ============================================
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500

# ============================================
# üöÄ SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# ============================================
# üõ°Ô∏è SECURITY SETTINGS
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=120
SEARCH_RATE_LIMIT_WINDOW_MS=60000
SEARCH_RATE_LIMIT_MAX_REQUESTS=30

SESSION_SECRET=generate_random_64_char_string_here
JWT_SECRET=generate_random_64_char_string_here
ENCRYPTION_KEY=generate_random_32_byte_hex_here

# ============================================
# üìä LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/news-proxy.log
ENABLE_DEBUG=false
ENABLE_REQUEST_LOGGING=true

# ============================================
# üîí HTTPS/SSL
# ============================================
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000
TRUST_PROXY=false

# ============================================
# üì± APPLICATION
# ============================================
APP_NAME=News-API-Proxy-Secure
APP_VERSION=4.0.0
SUPPORT_EMAIL=your-email@example.com
COMPANY_NAME=YourCompany

# ============================================
# ‚ö° PERFORMANCE
# ============================================
CACHE_DURATION=300000
MAX_CACHE_SIZE=1000
MAX_ARTICLES_PER_REQUEST=100
REQUEST_TIMEOUT=15000
MAX_RETRIES=3

# ============================================
# üîç SEARCH
# ============================================
MIN_SEARCH_LENGTH=2
MAX_SEARCH_RESULTS=50
SEARCH_CACHE_DURATION=300000
ENABLE_RELEVANCE_SCORING=true

# ============================================
# üåç LOCALIZATION
# ============================================
DEFAULT_LANGUAGE=en
DEFAULT_COUNTRY=us
SUPPORTED_LANGUAGES=en,hi,es,fr,de,ja,zh,ar,pt,ru,it,ko
SUPPORTED_COUNTRIES=in,us,gb,ca,au,de,fr,es,jp,cn,br,mx,it,ru,kr

# ============================================
# üß™ FEATURE FLAGS
# ============================================
ENABLE_SEARCH=true
ENABLE_DUPLICATE_REMOVAL=true
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true
ENABLE_HASH_BASED_DEDUP=true
ENABLE_OFFLINE_MODE=true

# ============================================
# üêõ DEBUG
# ============================================
DEBUG=false
VERBOSE_ERRORS=false
MOCK_API_RESPONSES=false

# ============================================
# üìà MONITORING
# ============================================
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true